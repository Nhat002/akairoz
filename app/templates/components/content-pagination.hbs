{{#if isPaginate}}
  <li class="{{if isPrevDisabled 'disabled'}}">
    <a href="#" {{action 'prevPage'}}>
      <span aria-hidden="true">{{awesome-icon name="chevron-left"}}</span>
      <span class="sr-only">Previous</span>
    </a>
  </li>
  {{#each pages as |page|}}
    {{content-pagination-item page=page currentPage=currentPage onSelect=(action "goToPage")}}
  {{/each}}
  <li class="{{if isNextDisabled 'disabled'}}">
    <a href="#" {{action 'nextPage'}}>
      <span aria-hidden="true">{{awesome-icon name="chevron-right"}}</span>
      <span class="sr-only">Next</span>
    </a>
  </li>
{{/if}}